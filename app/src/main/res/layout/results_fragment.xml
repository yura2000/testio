<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".results.ResultsFragment">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/results_constraint_layout">

        <android.support.constraint.ConstraintLayout
                android:layout_width="345dp"
                android:layout_height="469dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@color/backgroundResults" android:id="@+id/constraintLayout"
                android:layout_marginTop="120dp" app:layout_constraintTop_toTopOf="parent"
        >

            <TextView
                    android:text="@string/correct_answers"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    android:textColor="@color/itemTopics"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="17sp"
                    android:gravity="center_vertical"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                    android:layout_marginTop="76dp" app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:text="123"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textCorrect_tv"
                    android:textColor="@color/textCorrect"
                    android:fontFamily="@font/notosans_bold"
                    android:textSize="23sp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:background="@color/correct"
                    app:layout_constraintTop_toTopOf="@+id/textView3"
                    app:layout_constraintBottom_toBottomOf="@+id/textView3" android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                    android:text="@string/incorrect_answers"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    android:textColor="@color/itemTopics"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="17sp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="64dp" app:layout_constraintTop_toBottomOf="@+id/textView3"/>
            <TextView
                    android:text="123"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textInCorrect_tv"
                    app:layout_constraintTop_toTopOf="@+id/textView5"
                    app:layout_constraintBottom_toBottomOf="@+id/textView5" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    android:padding="5dp"
                    android:textColor="@color/textCorrect"
                    android:fontFamily="@font/notosans_bold"
                    android:textSize="23sp"
                    android:gravity="center"
                    android:background="@color/inCorrect"/>
            <TextView
                    android:text="@string/time_used"
                    android:layout_width="wrap_content"
                    android:textColor="@color/itemTopics"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="17sp"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4" android:layout_marginStart="16dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="64dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView5"/>
            <TextView
                    android:text="@string/not_available"
                    android:layout_width="108dp"
                    android:layout_height="48dp"
                    android:id="@+id/textTime_tv"
                    android:textColor="@color/itemTopics"
                    android:fontFamily="@font/notosans_bold"
                    android:textSize="16sp"
                    app:layout_constraintTop_toTopOf="@+id/textView4"
                    app:layout_constraintBottom_toBottomOf="@+id/textView4" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"/>
        </android.support.constraint.ConstraintLayout>
        <Button
                android:text="@string/main_menu"
                android:layout_width="283dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/startTopics_btn"
                android:layout_marginTop="412dp"
                app:layout_constraintTop_toBottomOf="@+id/textResult_tv"
                android:background="@color/results"
                android:fontFamily="@font/notosans_bold"
                android:textSize="20sp"
                android:textColor="@color/backgroundTopics"/>
        <TextView
                android:text="@string/result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/textResult_tv"
                android:textColor="@color/results"
                android:fontFamily="@font/notosans_bold"
                android:textSize="48sp"
                android:layout_marginTop="76dp"
                app:layout_constraintTop_toTopOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</FrameLayout>

