<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".features.info.InfoFragment">


    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/backgroundTopics">
        <ImageView
                android:layout_width="418dp"
                android:layout_height="330dp"
                tools:src="@drawable/csharplg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/infoImage_img"
                app:layout_constraintTop_toTopOf="parent"/>
        <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="180dp"
                android:background="@color/itemTopics">

            <TextView
                    android:text="@string/title"
                    android:textSize="30sp"
                    android:layout_width="114dp"
                    android:layout_height="50dp"
                    android:id="@+id/textView2"
                    android:fontFamily="@font/notosans_bold"
                    android:textColor="@color/textTopics"
                    android:gravity="center_vertical"
                    android:layout_marginStart="36dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="100dp" app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:layout_width="216dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:id="@+id/infoTitle_tv"
                    android:fontFamily="@font/notosans_bold"
                    android:textColor="@color/textTopics"
                    android:text="@string/loading"
                    android:gravity="center_vertical" app:layout_constraintStart_toEndOf="@+id/textView2"
                    android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textView2"
                    app:layout_constraintBottom_toBottomOf="@+id/textView2"/>
            <TextView
                    android:text="@string/number_of_questions"
                    android:layout_width="114dp"
                    android:fontFamily="@font/notosans_regular"
                    android:textColor="@color/textTopics"
                    android:gravity="center_vertical"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView" android:layout_marginTop="28dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginStart="36dp"
                    app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                    android:layout_width="216dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/infoQuestions_tv"
                    android:fontFamily="@font/notosans_regular"
                    android:textColor="@color/textTopics"
                    android:gravity="center_vertical"
                    android:textSize="20sp"
                    android:text="@string/loading"
                    app:layout_constraintStart_toEndOf="@+id/textView"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintTop_toTopOf="@+id/textView"
                    app:layout_constraintBottom_toBottomOf="@+id/textView"/>
            <TextView
                    android:text="@string/amount_of_time"
                    android:layout_width="114dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosans_regular"
                    android:textColor="@color/textTopics"
                    android:gravity="center_vertical"
                    android:textSize="20sp"
                    android:id="@+id/infoText_tv"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="36dp"
                    android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/textView"/>
            <TextView
                    android:text="@string/not_available"
                    android:layout_width="217dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/amountOfTime_tv"
                    android:fontFamily="@font/notosans_regular"
                    android:textColor="@color/textTopics"
                    android:gravity="center_vertical"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toEndOf="@+id/infoText_tv" android:layout_marginStart="8dp"
                    app:layout_constraintTop_toTopOf="@+id/infoText_tv"
                    app:layout_constraintBottom_toBottomOf="@+id/infoText_tv"/>
            <Button
                    android:text="@string/start"
                    android:textSize="30sp"
                    android:fontFamily="@font/notosans_bold"
                    android:textColor="@color/textTopics"
                    android:layout_width="353dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/infoButton_btn"
                    android:layout_marginTop="48dp"
                    app:layout_constraintTop_toBottomOf="@+id/amountOfTime_tv"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>
        </android.support.constraint.ConstraintLayout>
        <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                tools:src="@mipmap/student"
                android:id="@+id/userImage_img"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="90dp"
                app:layout_constraintTop_toTopOf="parent"/>
    </android.support.constraint.ConstraintLayout>

</FrameLayout>
