<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".info.InfoFragment">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="@string/title"
                android:textSize="35sp"
                android:layout_width="105dp"
                android:layout_height="50dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="108dp"
                android:layout_marginStart="76dp" android:id="@+id/textView2"/>
        <TextView
                android:text="TextView"
                android:layout_width="117dp"
                android:layout_height="51dp"
                android:id="@+id/infoTitle_tv"
                app:layout_constraintStart_toEndOf="@+id/textView2"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="108dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <Button
                android:text="@string/start"
                android:textSize="30sp"
                android:background="@color/buttonStart"
                android:textColor="@color/buttonStartText"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/infoButton_btn" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="126dp"/>
        <TextView
                android:text="Блаблаблаблабла"
                android:layout_width="344dp"
                android:layout_height="177dp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/infoText_tv" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/infoButton_btn"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/infoTitle_tv"
                app:layout_constraintVertical_bias="0.32999998"/>
    </android.support.constraint.ConstraintLayout>

</FrameLayout>