<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".test.TestFragment">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/test_constraint_layout">

        <TextView
                android:text="TextView"
                android:layout_width="337dp"
                android:layout_height="223dp"
                android:id="@+id/titleTest_tv" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="32dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <RadioGroup
                android:layout_width="337dp"
                android:layout_height="164dp"
                android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/titleTest_tv"
                android:id="@+id/answers_rb" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">
            <RadioButton
                    android:text="RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/answerOne_rb" android:layout_weight="1"/>
            <RadioButton
                    android:text="RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/answerTwo_rb" android:layout_weight="1"/>
            <RadioButton
                    android:text="RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/answerThree_rb" android:layout_weight="1"/>
            <RadioButton
                    android:text="RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/answerFour_rb" android:layout_weight="1"/>
        </RadioGroup>
        <Button
                android:text="Button"
                android:layout_width="337dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/next_btn" app:layout_constraintTop_toBottomOf="@+id/answers_rb"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.19999999"/>
    </android.support.constraint.ConstraintLayout>

</FrameLayout>