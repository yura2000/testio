<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".features.test.TestFragment">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/test_constraint_layout"
            android:background="@color/backgroundTopics">

        <TextView
                android:text="@string/loading"
                android:layout_width="400dp"
                android:layout_height="215dp"
                android:id="@+id/titleTest_tv"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@color/itemTopics"
                android:fontFamily="@font/notosans_bold"
                android:shadowColor="#ff6cc450"
                android:elevation="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:gravity="center_vertical|center_horizontal"/>
        <RadioGroup
                android:layout_width="399dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/titleTest_tv"
                android:id="@+id/answers_rb"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

            <RadioButton
                    android:layout_width="match_parent"
                    android:buttonTint="@color/buttonStart"
                    android:layout_height="wrap_content"
                    android:id="@+id/answer1_rb"
                    android:layout_weight="1"
                    android:button="@android:color/transparent"
                    android:background="@drawable/background_radio_button"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:text="@string/loading"
                    android:layout_margin="5dp"
                    android:elevation="5dp"
                    android:fontFamily="@font/notosans_regular"
                    android:textSize="14sp"
                    android:textColor="@drawable/radio_text_selected"/>
            <RadioButton
                    android:layout_width="match_parent"
                    android:buttonTint="@color/buttonStart"
                    android:layout_height="wrap_content"
                    android:id="@+id/answer2_rb"
                    android:layout_weight="1"
                    android:button="@android:color/transparent"
                    android:background="@drawable/background_radio_button"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:text="@string/loading"
                    android:layout_margin="5dp"
                    android:elevation="5dp"
                    android:fontFamily="@font/notosans_regular"
                    android:textSize="14sp"
                    android:textColor="@drawable/radio_text_selected"/>
            <RadioButton
                    android:layout_width="match_parent"
                    android:buttonTint="@color/buttonStart"
                    android:layout_height="wrap_content"
                    android:id="@+id/answer3_rb"
                    android:layout_weight="1"
                    android:button="@android:color/transparent"
                    android:background="@drawable/background_radio_button"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:text="@string/loading"
                    android:layout_margin="5dp"
                    android:elevation="5dp"
                    android:fontFamily="@font/notosans_regular"
                    android:textSize="14sp"
                    android:textColor="@drawable/radio_text_selected"/>
            <RadioButton
                    android:layout_width="match_parent"
                    android:buttonTint="@color/buttonStart"
                    android:layout_height="wrap_content"
                    android:id="@+id/answer4_rb"
                    android:layout_weight="1"
                    android:button="@android:color/transparent"
                    android:background="@drawable/background_radio_button"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:text="@string/loading"
                    android:layout_margin="5dp"
                    android:elevation="5dp"
                    android:fontFamily="@font/notosans_regular"
                    android:textSize="14sp"
                    android:textColor="@drawable/radio_text_selected"/>
        </RadioGroup>
        <Button
                android:text="@string/next"
                android:layout_width="386dp"
                android:layout_height="wrap_content"
                android:background="@drawable/background_button"
                android:textColor="@color/buttonStartText"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/next_btn"
                android:layout_marginBottom="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:elevation="5dp"/>
    </android.support.constraint.ConstraintLayout>

</FrameLayout>