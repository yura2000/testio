<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/containerItem"
>
    <android.support.constraint.ConstraintLayout
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:background="@color/itemTopics"
            app:layout_constraintVertical_bias="1.0">

        <TextView
                android:text="99"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/itemId_tv"
                android:gravity="center"
                android:fontFamily="@font/notosans_regular"
                android:textColor="@color/textTopics"
                app:layout_constraintStart_toEndOf="@+id/textView6"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:text="TEXTEXTEXTEXTETEXTEXTEXTE"
                android:layout_width="268dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/itemTitle_tv"
                android:gravity="center_vertical"
                android:fontFamily="@font/notosans_bold"
                android:textColor="@color/textTopics"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/textView6"/>
        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/brain"
                android:id="@+id/itemImage_img"
                android:layout_marginTop="14dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="16dp"
        />
        <TextView
                android:text="@string/not_available"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:id="@+id/itemDescription_tv"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/itemTitle_tv"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/notosans_regular"
                android:textColor="@color/textTopics"
                android:textSize="16sp" android:layout_marginBottom="20dp"/>
        <TextView
                android:text="@string/number_of_topic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/notosans_regular"
                android:textColor="@color/textTopics"
                android:textSize="16sp"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>