<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/containerItem"
        >
    <android.support.constraint.ConstraintLayout
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:background="@color/itemTopics">

        <TextView
                android:text="0"
                android:textSize="20sp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/itemId_tv"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="center_vertical"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/formsTextMain"
                app:layout_constraintStart_toEndOf="@+id/itemTitle_tv"
                android:layout_marginStart="8dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="243dp"
                android:layout_height="50dp"
                android:textSize="20sp"
                android:id="@+id/itemTitle_tv"
                app:layout_constraintStart_toEndOf="@+id/itemImage_img"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="center_vertical"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/formsTextMain"
                android:layout_marginStart="5dp"
                app:layout_constraintVertical_bias="0.0"/>
        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/brain"
                app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/itemImage_img"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toTopOf="parent"
        />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>